{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the API Management"
      }
    },
    "LinkedTemplatesBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL of the repository that contains the generated templates"
      }
    },
    "LinkedTemplatesUrlQueryString": {
      "type": "string",
      "metadata": {
        "description": "Query string for the URL of the repository"
      }
    },
    "PolicyXMLBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL of the repository that contains the generated policy files"
      }
    },
    "PolicyXMLSasToken": {
      "type": "string",
      "metadata": {
        "description": "The SAS token for the URL of the policy container"
      }
    },
    "serviceUrl": {
      "type": "object",
      "metadata": {
        "description": "Service url for each Api"
      }
    },
    "NamedValues": {
      "type": "object",
      "metadata": {
        "description": "Named values"
      }
    },
    "ApiLoggerId": {
      "type": "object",
      "metadata": {
        "description": "LoggerId for this api"
      }
    },
    "LoggerResourceId": {
      "type": "object",
      "metadata": {
        "description": "ResourceId for the logger"
      }
    }
  },
  "resources": [
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/base-apim-globalServicePolicy.template.json', parameters('LinkedTemplatesUrlQueryString'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          },
          "PolicyXMLSasToken": {
            "value": "[parameters('PolicyXMLSasToken')]"
          }
        }
      },
      "name": "globalServicePolicyTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-01-01",
      "dependsOn": []
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/base-apim-products.template.json', parameters('LinkedTemplatesUrlQueryString'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          },
          "PolicyXMLSasToken": {
            "value": "[parameters('PolicyXMLSasToken')]"
          }
        }
      },
      "name": "productsTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-01-01",
      "dependsOn": []
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/base-apim-tags.template.json', parameters('LinkedTemplatesUrlQueryString'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          },
          "PolicyXMLSasToken": {
            "value": "[parameters('PolicyXMLSasToken')]"
          }
        }
      },
      "name": "tagTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-01-01",
      "dependsOn": []
    }
  ]
}